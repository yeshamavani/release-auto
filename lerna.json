{
  "packages": [
    "packages/*",
    "projects/*"
  ],
  "command": {
    "bootstrap": {
      "concurrency": 4,
      "forceLocal": true
    },
    "version": {
      "conventionalCommits": true,
      "message": "chore: publish release",
      "allowBranch": "master"
    },
  "publish": {
    "conventionalCommits": true,
    "message": "chore: publish release",
    "allowBranch": "master",
    "noPrivate": true
  },
  "clean": {
    "loglevel": "silent",
    "concurrency": 8,
    "yes": true
  }
},
  "version": "independent"
}
