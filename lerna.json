{
  "packages": ["packages/*", "projects/*"],
  "command": {
    "bootstrap": {
      "concurrency": 4,
      "forceLocal": true
    },
    "version": {
      "conventionalCommits": true,
      "message": "chore: publish release",
      "allowBranch": "master"
    },
    "publish": {
      "conventionalCommits": true,
      "message": "chore: publish release",
      "allowBranch": "master",
      "noPrivate": true
    },
    "clean": {
      "loglevel": "silent",
      "concurrency": 8,
      "yes": true
    },
    "changelog": {
      "labels": {
        "feat": "New Feature",
        "fix": "Bug Fix",
        "docs": "Changes in the documents",
        "style": "Change that does not change meaning of code",
        "refactor": "Neither a bug fix nor feature",
        "perf": "Improves Performance",
        "test": "Changes in test",
        "chore": "Changes to the build process or auxiliary tools",
        "revert": "Revert to a commit",
        "WIP": "Work in progress"
      }
    }
  },
  "version": "independent"
}
